{
   "parserOptions":{
      "ecmaVersion":7,
      "sourceType":"module"
   },
   "env":{
      "browser":false,
      "node":true
   },
   "extends":[
      "eslint:recommended"
   ],
   "rules":{
      "arrow-body-style":[
         "error",
         "always"
      ],
      "arrow-parens":[
         "error",
         "always"
      ],
      "arrow-spacing":[
         "error",
         {
            "before":true,
            "after":true
         }
      ],
      "no-console":"off",
      "quotes":[
         "error",
         "double",
         {
            "avoidEscape":true,
            "allowTemplateLiterals":true
         }
      ],
      "semi":[
         "error",
         "never"
      ],
      "strict":"off"
   }
}